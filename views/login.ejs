<html lang="en">
    <head>
        <title>One 1000</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script src="js/adminlte.min.js"></script>
        <link rel="stylesheet" href="css/style.css">
        <link rel="stylesheet" href="css/admin.css">
        <link rel="stylesheet" href="css/adminlte.min.css">
        <link rel="stylesheet" href="css/company.css">
        <link rel="stylesheet" href="css/musicstyle.css">
		<!-- Font Awesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
        <!-- Bootstrap core CSS -->
		<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
        <!-- Material Design Bootstrap -->
		<link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.0/css/mdb.min.css" rel="stylesheet">
	
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                   <div class="row">
                       <div class="col-lg-6 pl-5 mb-3">
                            <a href="/home"><img class="z-depth-0" src="images/one1000-primary-logo.png" alt="logo" height="120"/></a>
                            <h3 class="mt-5 mb-3 font-weight-bold">Login to your account</h3>
                            <form action="/api/login-super-admin" method="POST">
                               <div class="form-group">
                                   <label for="email" class="font-weight-bold">Email</label>
                                   <input type="text" name="email" id="email" class="form-control input-sm" style="width:60%" placeholder="Email">
                               </div>
                               <div class="form-group">
                                   <label for="password" class="font-weight-bold">Password</label>
                                   <input type="password" name="password" id="password" class="form-control input-sm" style="width:60%" placeholder="Password">
                                   <a class="nav-link text-blue-50" href="/signup"><h6 class="ml-n3">Create Account</h6></a>
                                   <a class="nav-link text-blue-50" href="/forgotPassword"><h6 class="ml-n3">Forgot Password?</h6></a>
                               </div>
                               <div class="row mt-5">
                                   <div class="col-lg-6">
                                       <button type="submit" class="btn ml-n1" style="width:80%; color: white; border-radius: 8px; background: #017EBE;" name="signin">Login</button>
                                   </div>
                               </div>
                           </form>
                       </div>
                       <br>
                       <div class="col-lg-6 p-0">
                           <img class="img-fluid" src="images/Rectangle-51.png" alt="login-image" />
                       </div>
                   </div>
                </div>
            </div>
        </div>
        
        <script type="text/javascript">
            $(document).ready(function () {
                // is open by default
                $('#successModal').modal('show');

            });
        </script>
    </body>
</html>