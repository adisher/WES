
<!-- include header -->
<%- include ('include/sidebar') %>
<!-- /include header -->


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper bg-color py-5">

        <section class="content">

            <div class="py-2 container"
                style="background-color:#fff; border-top-left-radius: 10px; border-top-right-radius: 10px;">
                <h6 class="font-weight-bold pt-2 pl-2">Add Details</h6>
            </div>

            <div class="mt-1 py-4 container"
                style="background-color:#fff;">
                <form action="/api/booklets" method="POST" enctype="multipart/form-data">
                    <div class="row ml-2 mt-4">
                        <div class="col-lg-6 mt-3">
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input class="form-control input-sm" id="title" type="text" name="title" placeholder="Book Title">
                            </div>
                        </div>
                    </div>
                    <div class="row ml-2 mt-2">
                        <div class="col-lg-6 mt-2">
                            <div class="form-group">
                                <div class="col-lg-3 ml-n4">
                                    <div class=" pt-1 inner-addon left-addon" >
                                        <i class=" fa fa-cloud-arrow-up" style="float: right;
                                        
                                        top: 28px;
                                        left: -48px;
                                        position: relative;
                                        z-index: 2;
                                        color: rgb(0, 0, 0);"></i>
                                    </div>
                                    <input type="file" class="selectThumbnail ml-3" id="thumbnail" name="thumbnail" accept="image/*">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row ml-2">
                        <div class="col-lg-6 mt-2">
                            <div class="form-group">
                                <div class="col-lg-3 ml-n4">
                                    <div class=" pt-1 inner-addon left-addon" >
                                        <i class=" fa fa-cloud-arrow-up" style="float: right;
                                        
                                        top: 28px;
                                        left: -48px;
                                        position: relative;
                                        z-index: 2;
                                        color: rgb(0, 0, 0);"></i>
                                    </div>
                                    <input type="file" class="selectPDF ml-3" id="pdf" name="pdf" accept="application/pdf">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row ml-1 pt-5 mt-5">
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-md" style="border-radius: 5px;width: 12rem; background-color: #3CB179; color: white;" name="add">Add Now</button>
                        </div>
                    </div>
                </form>
            </div>

        </section>

        <!-- success modal -->
        <% if (message != ''){ %>
            <div class="modal fade py-3" id="successModal">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-body">
                            <i class="fa-solid fa-circle-xmark mr-2 text-danger"></i>
                            <%= message %>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
                <!-- end success modal -->

    </div>

</div>
<!-- ./wrapper -->
<script type="text/javascript">
    $(document).ready(function () {
        // is open by default
        $('#successModal').modal('show');

    });
</script>
</body>
</html>