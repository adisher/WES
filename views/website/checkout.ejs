<!-- <form action="/api/checkout/<%= sess_id %>" method="POST"> -->
    <div class="container-fluid px-5 header-webinar">
        <div class="row">
            <i class="fa-solid fa-angle-left fa-lg text-muted px-3"></i>
            <h5 class="font-weight-bold">Checkout</h5>
        </div>
        <div class="row">
            <div class="col-lg-7 col-12">
                <div class="col-lg-12 p-4" style="border: 1px solid black; border-radius: 8px;">

                    <form id="card-form">
                        <label for="Account Holder Name" class="font-weight-bold">Account Holder Name</label>
                        <input type="text" name="name" id="card-holder-name" placeholder="Account Holder Name" class="form-control mb-3">

                        <label for="card-number" class="font-weight-bold my-2">Card Number</label>
                        <div id="card-number" class="form-control card_field mb-3"></div>

                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6 mb-3">
                                <div class="form-group">
                                    <label for="expiration-date" class="font-weight-bold">Expiration Date</label>
                                    <div id="expiration-date" class="form-control input-sm card_field"></div>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">

                                    <label for="cvv" class="font-weight-bold">CVV</label>
                                    <div id="cvv" class="form-control input-sm card_field"></div>
                                    <input type="hidden" name="enrolled_courses" id="enrolled_courses" value="<%= courses.enrolled_courses[0]._id %>" class="form-control input-sm">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <button type="submit" class="btn my-5 btn-block" id="submit" value="submit"
                                style="background-color:#017EBE; color: white; border-radius: 15px;" name="buy">Confirm</button>
                        </div>
                        
                    </form>
                </div>
                    
            </div>
            <div class="col-lg-5 col-12">
                <div class="col-lg-12 px-3 py-4" style="background-color: #017EBE; color:#fff; border-radius: 8px;">
                    <img class="img-fluid card-img-top" src="images/Rectangle-11c.png" alt="checkout-image" />
                    <div class="p-1 mt-1">
                        <div class="d-flex justify-content-between bg-transparent border-top-0 font-weight-bold">
                            <div class="views">
                                <h6 class="font-weight-bold"><%= courses.enrolled_courses[0].course_title %></h6>
                                <input type="hidden" value="<%= courses.enrolled_courses[0].course_title %>" name="item">
                            </div>
                            <div class="stats">
                                <span>$<%= courses.enrolled_courses[0].course_price %></span>
                                <input type="hidden" value="<%= courses.course_price %>" name="price">
                            </div>
                        </div>
                        <p class="small"><%= courses.enrolled_courses[0].course_description %></p>
                        <p class="small font-weight-bold"><%= courses.company_name %></p>
                        <input type="hidden" value="<%= courses._id %>" name="company_id" id="company_id"/>
                        <p class="small"><%= moment(courses.createdAt).format('MMM DD YYYY') %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer id="footer" class="font-small text-white pt-4">

        <!-- Footer Elements -->
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <a class="nav-link p-0" href="/home">
                        <img src="images/one1000-primary-logo.png" class="z-depth-0" alt="avatar image" height="140">
                    </a>
                </div>
                <div class="col-lg-4">
                    <h5 class="text-white mb-3">Quick links</h5>
                    <ul class="list-unstyled text-muted">
