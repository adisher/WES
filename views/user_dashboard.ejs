    <script type="text/javascript">
        $(document).ready(function () {
            //audio
        let audio = $('#audio')
        let playState = 'play';

        // if(playIconContainer){

            $('#audioImg').on('click', () => {
                console.log("play");
                if(playState === 'play') {
                    audio[0].play();
                    
                    playState = 'pause';
                } else {
                    audio[0].pause();
                    
