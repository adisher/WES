        <div class="row">
            <div class="col-lg-12">
                <h5 class="font-weight-bold my-4">My Courses</h5>
                <% if(courses.length != 0) {
                    courses.forEach(function(course) { %>
                <div class="col-lg-12 p-4 mb-3" style="border: 1px solid rgba(129, 72, 72, 0.300); border-radius: 8px;">
                    <div class="row px-3">
                        <div class="row align-items-center">
                            <div class="col-2">
                                <img class="img-fluid" style="border-radius: 8px;" src="images/Rectangle-16.png">
                            </div>
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="row font-weight-bold mb-1 align-items-center"><span class="mr-2"><%= course.course_title %></span>                
                                    <img class="img-fluid ml-3" id="audioImg" style="cursor:pointer; width: 25px!important; height: 25px!important; max-height: 150px!important; max-width: 150px!important; padding: 4px; background-color: #c4c4c47c; border-radius: 50%;" src="images/icons8_audio_96px-2.png">
                                    <img class="img-fluid ml-2" id="pdf" data-toggle="modal" data-target="#pdfModal" style="cursor:pointer; width: 25px!important; height: 25px!important; padding: 4px; background-color: #c4c4c47c; border-radius: 50%;" src="images/icons8_book_96px-1.png">
                                    <audio id="audio">
                                        <source src="uploads/1659706907849-Devil in the form of whore.mp3" type="audio/mpeg">
                                    </audio>
                                </div>
                                <div class="row small text-muted mb-2">X3 Tech</div>
                                <div class="row progress mb-1" style="height: 10px;">
                                    <div class="progress-bar" role="progressbar" style="width: 1%; background-color: #3CB179;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <span class="row small mb-4" style="color: #3CB179">0% completed</span>
                                <span class="row small"><%= course.createdAt %></span>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="row d-flex justify-content-end">
                                    <a href="/learning?id=<%= course._id %>" class="btn btn-block w-50 my-2" style="border-radius: 5px; background-color: #017EBE; color: white;">Continue Learning</a>
                                </div>
                                <div class="row d-flex justify-content-end align-items-center">
                                    <span class="small mr-4" style="color:#F4AE1F">2 Attempts remaining</span>
                                    <a href="/exam?id=<%= course._id %>" class="btn btn-block w-50 mb-1" style="border-radius: 5px; background-color: #F4AE1F; color: white;">Take Exam</a>
                                </div>
                                <div class="row d-flex justify-content-end">
                                    <button data-toggle="modal" data-target="#exampleModal" class="btn btn-block w-50 my-2 disabled" style="border-radius: 5px; background-color: #E5E5E5;">View Certificate</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <%  }) } else { %>
                    <div>
                        <h5>No course enrolled. Please enroll a course:</h5> 
                        <a style="border-radius: 15px; background: #017EBE;" class="btn text-white btn-md ml-3" href="/onlinetraining">Enroll Now</a>
                    </div> 
                    <% } %>
